@using SistemaVentasBatia.Enums

@model SistemaVentasBatia.DTOs.MaterialCotizacionDTO

<div class="modal fade" id="modalLimpiezaEditarMaterialCotizacion">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Editar Material</h4>
                @*<h6 class="modal-title text-black-50 ms-2 mt-1"> @Model.NombreSucursal - @Model.DescripcionPuesto</h6>*@
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="d-flex mb-3">
                    <div class="me-auto">
                         <h5>@Model.ClaveProducto</h5>
                         @*<h6 class="text-black-50">@Model.DescripcionMaterial</h6>*@
                    </div>
                    <div>
                        <button type="button" class="btn btn-outline-warning me-1 d-none" id="btnRegresaListadoEditarMaterial" data-operario="@Model.IdPuestoDireccionCotizacion"><i class="fa-solid fa-arrow-left"></i> Regresar</button>                
                        <button type="button" id="btnActualizarMaterial" class="btn btn-outline-success"><i class="fa-solid fa-save"></i> Guardar</button>   
                    </div>
                </div>
                
                <form asp-action="LimpiezaEditarMaterialOperario" method="post" id="formLimpiezaEditarMaterialCotizacion">
                    @Html.HiddenFor(x => x.IdCotizacion)
                    @Html.HiddenFor(x => x.IdDireccionCotizacion)
                    @Html.HiddenFor(x => x.IdPuestoDireccionCotizacion)
                    @Html.HiddenFor(x => x.IdMaterialCotizacion)
                    @Html.HiddenFor(x => x.PrecioUnitario)


                    <div class="row mb-3">
                        <div class="col-6 col-md-4 col-sm-4">
                            <div class="form-floating">
                                <input type="text" class="form-control" asp-for="Cantidad">
                                <label asp-for="Cantidad">Cantidad</label>
                            </div>
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-4 col-sm-4">
                            <div class="form-floating">
                                <select class="form-select" aria-label="IdFrecuencia" asp-for="IdFrecuencia" asp-items="Html.GetEnumSelectList<Frecuencia>()">
                                </select>
                                <label asp-for="IdFrecuencia">Frecuencia:</label>
                            </div>
                            <span asp-validation-for="IdFrecuencia" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>
</div>
